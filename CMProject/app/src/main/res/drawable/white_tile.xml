<!-- res/drawable/white_tile.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set color to white -->
        </shape>
    </item>
    <!-- Add border lines around the tile -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Set color to black -->
        </shape>
    </item>
    <!-- Add text in the center of the tile -->
    <item android:gravity="center">
        <bitmap
            android:src="@android:drawable/ic_menu_info_details"
        android:tint="#000000" />
    </item>
</layer-list>
