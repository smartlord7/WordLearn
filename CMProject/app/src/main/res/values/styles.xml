<!-- res/values/styles.xml -->
<resources>

    <style name="MainMenuButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/main_menu_button_background</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">#3F51B5</item> <!-- Primary color for the app toolbar -->
        <item name="colorPrimaryDark">#303F9F</item> <!-- Darker variant for the status bar -->
        <item name="colorAccent">#FF4081</item> <!-- Accent color used for buttons and highlights -->

    </style>

        <style name="RegistrationEditText" parent="Widget.AppCompat.EditText">
            <item name="android:background">@drawable/edit_text_background</item>
            <item name="android:padding">10dp</item>
            <item name="android:textColor">#FFFFFF</item>

        </style>



        <style name="TierButtonBronze">
            <item name="android:background">#CD7F32</item> <!-- Bronze color -->
        </style>

        <style name="TierButtonSilver">
            <item name="android:background">#C0C0C0</item> <!-- Silver color -->
        </style>

        <style name="TierButtonGold">
            <item name="android:background">#FFD700</item> <!-- Gold color -->
        </style>

        <style name="TierButtonMaster">
            <item name="android:background">#800080</item> <!-- Purple color for Master -->
        </style>

    <!-- res/values/styles.xml -->
    <style name="ChoiceButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>







</resources>
